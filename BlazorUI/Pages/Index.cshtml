@page "/"
@using ClassiUtiliClassLibrary;

<h1>Numero Z</h1>


    <div class="form-row">
        <div class="col">
            <input type="text" bind="@z.A" class="form-control" placeholder="Parte reale" />
        </div>
        <div class="col">
            <input type="text" bind="@zB" class="form-control" placeholder="Parte immaginaria" />
        </div>
    </div>


<h1>Numero w</h1>
Parte reale: <input type="text" bind="@wA" />
<br />
Parte immaginaria: <input type="text" bind="@wB" />

<p>@z  + @w = @s</p>

<button class="btn btn-primary" onclick="@Mostra">Mostra</button>

@functions {

    NumeroComplesso z, w, s;

    public double ZA { get; set; } = 0;

    double zB = 0;

    double wA = 0;
    double wB = 0;

    protected override void OnInit()
    {
        z = new NumeroComplesso();
        w = new NumeroComplesso();
        s = z.Somma(w);
    }

    void Mostra()
    {
        z.A = ZA;
        z.B = zB;

        w.A = wA;
        w.B = wB;

        s = z.Somma(w);
    }
}